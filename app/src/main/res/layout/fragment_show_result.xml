<?xml version="1.0" encoding="utf-8"?>
<tatteam.com.app_common.ui.drawable.FractionFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/resultArea"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_10"
                android:gravity="center"
                android:text="@string/fail"
                android:textAllCaps="true"
                android:textColor="@color/wrong_answer_color"
                android:textSize="@dimen/common_text_size_22" />

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_10"
                android:gravity="center_horizontal"
                android:text="@string/finish_test_1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_view_total_time_size" />

            <LinearLayout
                android:id="@+id/chartContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/common_size_15"
                android:layout_marginTop="@dimen/common_size_25"
                android:gravity="center"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resultArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke_line_size"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/buttonCorrectAnswer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_60"
                android:background="@drawable/button_without_corner"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imgCorrectAnswer"
                    android:layout_width="@dimen/common_size_55"
                    android:layout_height="@dimen/common_size_40"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_size_25"
                    android:background="@drawable/ic_correct_answer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_size_15"
                    android:layout_toRightOf="@+id/imgCorrectAnswer"
                    android:text="@string/correct_answer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size_22" />

                <TextView
                    android:id="@+id/tvCorrectAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_size_50"
                    android:text="@string/total_correct_answers"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size_22" />

                <ImageView
                    android:id="@+id/buttonNext1"
                    android:layout_width="@dimen/show_result_button_next_size"
                    android:layout_height="@dimen/show_result_button_next_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_size_5"
                    android:background="@drawable/bg_button_next"
                    android:clickable="true"
                    android:src="@drawable/ic_overall_result_normal_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke_line_size"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/buttonWrongAnswer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_60"
                android:background="@drawable/button_without_corner"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imgWrongAnswer"
                    android:layout_width="@dimen/common_size_55"
                    android:layout_height="@dimen/common_size_40"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_size_25"
                    android:background="@drawable/ic_wrong_answer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_size_15"
                    android:layout_toRightOf="@+id/imgWrongAnswer"
                    android:text="@string/wrong_answer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size_22" />

                <TextView
                    android:id="@+id/tvWrongAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_size_50"
                    android:text="@string/total_wrong_answers"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size_22" />

                <ImageView
                    android:id="@+id/buttonNext2"
                    android:layout_width="@dimen/show_result_button_next_size"
                    android:layout_height="@dimen/show_result_button_next_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_size_5"
                    android:background="@drawable/bg_button_next"
                    android:clickable="true"
                    android:src="@drawable/ic_overall_result_normal_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke_line_size"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/buttonNotAnswered"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_60"
                android:background="@drawable/button_without_corner"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imgNotAnswered"
                    android:layout_width="@dimen/common_size_55"
                    android:layout_height="@dimen/common_size_40"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_size_25"
                    android:background="@drawable/ic_not_answered" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_size_15"
                    android:layout_toRightOf="@+id/imgNotAnswered"
                    android:text="@string/not_answered"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size_22" />

                <TextView
                    android:id="@+id/tvNotAnswered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_size_50"
                    android:text="@string/total_not_answered"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_text_size_22" />

                <ImageView
                    android:id="@+id/buttonNext3"
                    android:layout_width="@dimen/show_result_button_next_size"
                    android:layout_height="@dimen/show_result_button_next_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_size_5"
                    android:background="@drawable/bg_button_next"
                    android:clickable="true"
                    android:src="@drawable/ic_overall_result_normal_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke_line_size"
                android:background="@color/black" />
        </LinearLayout>
    </RelativeLayout>
</tatteam.com.app_common.ui.drawable.FractionFrameLayout>