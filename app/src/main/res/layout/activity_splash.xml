<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context="essential.demosplashscreen.MainActivity">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_background"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="106dp">

        <RelativeLayout

            android:id="@+id/key_broad"
            android:layout_width="124dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:background="@drawable/key_broad" />

        <RelativeLayout
            android:id="@+id/rain"
            android:layout_width="124dp"
            android:layout_height="69dp"
            android:layout_below="@+id/key_broad"
            android:layout_centerInParent="true"
            android:background="@drawable/rain"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/essential"
            android:layout_width="210dp"
            android:layout_height="26dp"
            android:layout_below="@+id/rain"
            android:layout_centerInParent="true"
            android:background="@drawable/essential"
            android:paddingTop="3dp"
            android:visibility="invisible" />
    </RelativeLayout>
</RelativeLayout>
