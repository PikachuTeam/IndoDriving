<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="@dimen/common_size_15"
    android:layout_marginRight="@dimen/common_size_15"
    android:layout_marginTop="@dimen/common_size_10"
    card_view:cardCornerRadius="@dimen/common_size_5"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/buttonVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/raised_button"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/common_size_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>