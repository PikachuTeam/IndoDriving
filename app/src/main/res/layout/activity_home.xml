<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.HomeActivity">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_size_15"
        android:text="@string/app_name"
        android:textSize="@dimen/common_text_size_50" />

    <android.support.v7.widget.CardView
        android:id="@+id/buttonLearnContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_size_90"
        card_view:cardCornerRadius="@dimen/common_size_3"
        card_view:cardPreventCornerOverlap="false">

        <Button
            android:id="@+id/buttonLearn"
            android:layout_width="@dimen/navigation_activity_button_width"
            android:layout_height="@dimen/navigation_activity_button_height"
            android:background="@drawable/raised_button"
            android:text="@string/button_learn"
            android:textAllCaps="false"
            android:textSize="@dimen/common_text_size_50" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/buttonTestContainer"
        android:layout_width="@dimen/navigation_activity_button_width"
        android:layout_height="@dimen/navigation_activity_button_height"
        android:layout_below="@+id/buttonLearnContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_size_50"
        card_view:cardCornerRadius="@dimen/common_size_3"
        card_view:cardPreventCornerOverlap="false">

        <Button
            android:id="@+id/buttonTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/raised_button"
            android:text="@string/button_test"
            android:textAllCaps="false"
            android:textSize="@dimen/common_text_size_50" />
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/adsContainer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
