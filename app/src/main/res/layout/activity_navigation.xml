<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.essential.indodriving.ui.NavigationActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/colorMain" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_size_15"
        android:text="Indo Driving"
        android:textSize="60sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/buttonLearn"
        android:layout_width="@dimen/navigation_activity_button_width"
        android:layout_height="@dimen/navigation_activity_button_height"
        android:layout_below="@+id/appTitle"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="50dp"
        card_view:cardBackgroundColor="@color/navigation_activity_button_color"
        card_view:cardCornerRadius="@dimen/common_size_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/common_size_5"
                android:layout_marginLeft="@dimen/common_size_5"
                android:text="Learn"
                android:textSize="@dimen/common_text_size_50" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/buttonTest"
        android:layout_width="@dimen/navigation_activity_button_width"
        android:layout_height="@dimen/navigation_activity_button_height"
        android:layout_below="@+id/buttonLearn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_size_10"
        card_view:cardBackgroundColor="@color/navigation_activity_button_color"
        card_view:cardCornerRadius="@dimen/common_size_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/common_size_5"
                android:layout_marginLeft="@dimen/common_size_5"
                android:text="Learn"
                android:textSize="@dimen/common_text_size_50" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/buttonTutorial"
        android:layout_width="@dimen/navigation_activity_button_width"
        android:layout_height="@dimen/navigation_activity_button_height"
        android:layout_below="@+id/buttonTest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_size_10"
        card_view:cardBackgroundColor="@color/navigation_activity_button_color"
        card_view:cardCornerRadius="@dimen/common_size_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/common_size_5"
                android:layout_marginLeft="@dimen/common_size_5"
                android:text="Learn"
                android:textSize="@dimen/common_text_size_50" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FF00DD">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:background="?android:attr/selectableItemBackground"
            android:theme="@style/AppTheme"/>
    </android.support.v7.widget.CardView>


    <ImageButton
        android:layout_below="@id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:background="?android:attr/selectableItemBackground"/>

    <View
        android:id="@+id/ads1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ads_height"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
