<resources>

    <style name="MyMaterialTheme" parent="AppTheme.Theory">
        <item name="actionMenuTextColor">@color/toolbar_menu_item_color</item>
    </style>

    <style name="ExpandedCollapsingToolbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/common_text_size_25</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Theory" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Sign" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary_sign</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_sign</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="floating_menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
