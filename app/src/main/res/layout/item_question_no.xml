<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/questionNoWrapper"
        android:layout_width="@dimen/question_number_wrapper_width"
        android:layout_height="wrap_content"
        android:background="@drawable/question_wrapper"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/common_text_size_24" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_question_no_highlight_view_size">

            <View
                android:id="@+id/highlightView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/item_question_no_stroke_highlight_color"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>