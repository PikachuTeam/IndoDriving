<?xml version="1.0" encoding="utf-8"?>

<tatteam.com.app_common.ui.drawable.FractionFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_size_10"
        card_view:cardBackgroundColor="@color/background_container_color">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/choose_item_button_width"
                android:layout_height="@dimen/choose_item_button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/common_size_20"
                android:layout_marginTop="@dimen/common_size_20"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="@dimen/common_size_3"
                card_view:cardPreventCornerOverlap="false">

                <Button
                    android:id="@+id/buttonLearn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/raised_button"
                    android:text="@string/title_learn"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/choose_sim_button_text_size" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/buttonTestContainer"
                android:layout_width="@dimen/choose_item_button_width"
                android:layout_height="@dimen/choose_item_button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_size_40"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="@dimen/common_size_3"
                card_view:cardPreventCornerOverlap="false">

                <Button
                    android:id="@+id/buttonTest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/raised_button"
                    android:text="@string/title_test"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/choose_sim_button_text_size" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</tatteam.com.app_common.ui.drawable.FractionFrameLayout>