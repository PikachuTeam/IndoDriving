<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_warning_width"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_size_10"
        android:paddingTop="@dimen/common_size_5"
        android:text="@string/upgrade_to_pro_ver"
        android:textAllCaps="true"
        android:textColor="@color/text_color_2"
        android:textSize="@dimen/common_text_size_20" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_size_20"
        android:layout_marginTop="@dimen/common_size_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_key" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/common_size_5"
            android:text="@string/key"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/common_text_size_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_size_20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ads" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/common_size_5"
            android:text="@string/no_more_ads"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/common_text_size_20" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/warning_dialog_button_area_height">

        <TextView
            android:id="@+id/button_cancel"
            android:layout_width="@dimen/dialog_warning_button_cancel_width"
            android:layout_height="@dimen/dialog_warning_button_height"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_ok"
            android:background="@drawable/dialog_button"
            android:gravity="center"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/common_text_size_18" />

        <TextView
            android:id="@+id/button_ok"
            android:layout_width="@dimen/dialog_warning_button_ok_width"
            android:layout_height="@dimen/dialog_warning_button_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_size_5"
            android:layout_marginRight="@dimen/common_size_5"
            android:background="@drawable/dialog_button"
            android:gravity="center"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/common_text_size_18" />
    </RelativeLayout>
</LinearLayout>