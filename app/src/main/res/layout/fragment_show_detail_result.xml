<?xml version="1.0" encoding="utf-8"?>
<tatteam.com.app_common.ui.drawable.FractionFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background_color_sign"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_40"
            android:background="@color/not_answered_color"
            android:gravity="center"
            android:text="Correct Answers"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/common_text_size_19"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listDetailResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/text_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/common_size_10"
            android:text="@string/answer_all"
            android:textAllCaps="true"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/common_text_size_23"
            android:visibility="gone"/>
    </LinearLayout>
</tatteam.com.app_common.ui.drawable.FractionFrameLayout>