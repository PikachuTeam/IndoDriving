<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/choice_height"
        android:layout_marginLeft="@dimen/common_size_5"
        android:layout_marginRight="@dimen/common_size_5"
        android:layout_marginTop="@dimen/common_size_3"
        card_view:cardCornerRadius="@dimen/common_size_3"
        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:id="@+id/choiceLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/raised_button"
            android:clickable="true">

            <RelativeLayout
                android:id="@+id/radioButtonContainer"
                android:layout_width="@dimen/choice_height"
                android:layout_height="match_parent"
                android:background="@color/radio_button_background_color">

                <View
                    android:layout_width="@dimen/common_size_25"
                    android:layout_height="@dimen/common_size_25"
                    android:layout_centerInParent="true"
                    android:background="@drawable/radio_button" />

                <View
                    android:id="@+id/radioButton"
                    android:layout_width="@dimen/common_size_12"
                    android:layout_height="@dimen/common_size_12"
                    android:layout_centerInParent="true"
                    android:background="@drawable/radio_button_pressed"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewAnswer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/radioButtonContainer"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_size_10"
                android:text="Aloha"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_15" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>